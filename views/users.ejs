<%- include('layout/header')%>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
           
            <div class="table-responsive">
               <%if(employees!=''){%>
               <table class="table table-stripped text-center">
               <thead>
                   <tr class="table-dark"> 
                       <th>ID</th>
                       <th>Name</th>
                       <th>Gender</th>
                       <th>Title</th>
                       <th>Email</th>
                       <th>City</th>
                      
                   </tr>
               </thead>
               <tbody>
                   <% employees.forEach((row,index)=>{%>
                       <tr>
                           <td><%=index%></td>
                           <td><%= row.name%></td>
                           <td><%=row.gender%></td>
                           <td><%= row.title%></td>
                           <td><%= row.email%></td>
                           <td><%=row.city%></td>
                           
                        </tr>
                       <%})%>
               </tbody>
               </table>
               <%}else{%>
                   <h1>No records found</h1>
                   <%}%>
            </div>
           </div>
    </div>
</div>
<%- include('layout/footer')%>